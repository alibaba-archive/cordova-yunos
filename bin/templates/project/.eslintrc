{
  // ESLINT RECOMMENDED RULES @Jan 2017, For all YunOS app developers
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "valid-jsdoc": "off",
      "no-unused-vars": ["error", { "vars": "local", "args": "none" }],
      "no-empty": ["error", { "allowEmptyCatch": true }]
  },
  "globals": {
    "atom": true,
    "log": true
  }
}
